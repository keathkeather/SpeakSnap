<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbd90b">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="18dp"
        android:background="@drawable/backbutton"
        android:contentDescription="@string/backbtn1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_marginTop="18dp">

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/logo2"
            android:src="@drawable/logo2" />

        <ImageView
            android:id="@+id/snapImageView"
            android:layout_width="55dp"
            android:layout_height="25dp"
            android:src="@drawable/snap"
            android:layout_marginTop="12dp"
            android:layout_marginStart="2dp"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/textBox"
        android:backgroundTint="@null"
        android:layout_width="match_parent"
        android:layout_height="475dp"
        android:layout_marginTop="85dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="#FFFFFF">

        <EditText
            android:id="@+id/edit_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:gravity="top"
            android:text="" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <Button
                android:id="@+id/copyButton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="7dp"
                android:layout_marginEnd="7dp"
                android:background="@drawable/copybutton" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/snapButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textBox"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/camera"
        android:backgroundTint="@null" />

</RelativeLayout>
