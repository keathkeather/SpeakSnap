<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbd90b">

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:contentDescription="@string/logo2"
        android:src="@drawable/logo2"/>

    <Button
        android:id="@+id/speakButton"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:background="@drawable/speak"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="50dp"/>

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="120dp"
        android:layout_height="2dp"
        android:background="#5c3551"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/speakButton"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/snapButton"
        android:layout_width="120dp"
        android:layout_height="55dp"
        android:background="@drawable/snap"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/horizontalLine"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
