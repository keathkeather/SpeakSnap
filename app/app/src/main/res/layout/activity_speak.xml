<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbd90b">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/backbtn1"
        android:background="@drawable/backbutton"/>

    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="135dp"
        android:contentDescription="@string/logo2"
        android:src="@drawable/logo2"/>

    <ImageView
        android:id="@+id/speakImageView"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:src="@drawable/speak"
        android:layout_alignTop="@id/logoImageView"
        android:layout_toEndOf="@id/logoImageView"/>

    <RelativeLayout
        android:id="@+id/textBox"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@id/logoImageView"
        android:layout_marginTop="20dp"
        android:background="#FFFFFF">

        <TextView
            android:id="@+id/englishText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#5c3551"
            android:textSize="20sp"
            android:text="@string/try1"/>

        <Button
            android:id="@+id/copyBtn1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginStart="350dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/copybutton"/>

        <View
            android:id="@+id/divider"
            android:layout_width="200dp"
            android:layout_height="2dp"
            android:background="#5c3551"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/translatedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="#5c3551"
            android:textSize="20sp"
            android:text="@string/try2"/>

        <Button
            android:id="@+id/copyBtn2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_below="@id/divider"
            android:layout_marginStart="350dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/copybutton"/>
    </RelativeLayout>

    <Button
        android:id="@+id/languageButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/lang1"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="#5c3551"
        android:layout_below="@id/textBox"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/micBtn"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@id/languageButton"
        android:background="@drawable/micbutton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

</RelativeLayout>
